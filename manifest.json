{
  "manifest_version": 2,

  "name": "Reload tabs",
  "short_name": "Reload tabs",
  "version": "1.0",
  "description": "Reload all of the current window's tabs",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["reload.js"],
    "persistent": false
  },
  
  "commands": {
    "reload-tabs": {
      "suggested_key": { 
      	"default": "Ctrl+Shift+E",
      	"mac": "Command+Shift+E" 
      },
      "description": "Reload tabs"
    }
  },
  
  "permissions": [
  	"tabs"
  ]
}
